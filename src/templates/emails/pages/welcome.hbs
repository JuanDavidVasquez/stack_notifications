<!-- Contenido del correo de bienvenida -->

<!-- Título principal -->
<tr>
  <td align="center" style="padding: 20px 40px;">
    <table cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td style="font-size: 24px; font-weight: bold; color: #333333; text-align: center;">
          {{i18n.title}}
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Saludo -->
<tr>
  <td align="center" style="padding: 0 40px 10px;">
    <table cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td style="font-size: 16px; color: #555555;">
          {{i18n.greeting}} {{userName}},
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Mensaje de bienvenida -->
<tr>
  <td align="center" style="padding: 0 40px 20px;">
    <table cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td style="font-size: 16px; color: #555555;">
          {{i18n.message}}
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Verificación -->
<tr>
  <td align="center" style="padding: 20px 40px;">
    <table cellpadding="0" cellspacing="0" width="100%" style="background-color: #f8f8f8; border-radius: 6px;">
      <tr>
        <td style="padding: 20px; font-size: 16px; color: #555;">
          <strong>{{i18n.verificationTitle}}</strong><br /><br />
          {{i18n.verificationMessage}}
        </td>
      </tr>
      <tr>
        <td align="center" style="padding: 10px 0;">
          <table cellpadding="0" cellspacing="0" style="background-color: #007bff; border-radius: 4px;">
            <tr>
              <td style="padding: 12px 24px;">
                <span style="color: #ffffff; font-size: 18px;">{{confirmationCode}}</span>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Enlace alternativo -->
<tr>
  <td align="center" style="padding: 20px 40px 10px;">
    <table cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td style="font-size: 14px; color: #555;">
          {{i18n.alternativeText}}<br />
          <a href="{{confirmationUrl}}" style="color: #007bff;">{{confirmationUrl}}</a>
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Preguntas / Soporte -->
<tr>
  <td align="center" style="padding: 20px 40px 0;">
    <table cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td style="font-size: 14px; color: #555;">
          <strong>{{i18n.questionsTitle}}</strong><br />
          {{i18n.questionsMessage}}
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Despedida -->
<tr>
  <td align="center" style="padding: 20px 40px;">
    <table cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td style="font-size: 14px; color: #555;">
          {{i18n.footer.thanks}}<br />
          {{i18n.footer.team}} {{companyName}}<br />
        </td>
      </tr>
    </table>
  </td>
</tr>

<!-- Nota final -->
<tr>
  <td align="center" style="padding: 10px 40px 30px;">
    <table cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td style="font-size: 12px; color: #999;">
          {{i18n.footer.unsubscribe}}
        </td>
      </tr>
    </table>
  </td>
</tr>
